/* Header */
.header
	position relative
	margin-bottom 100px
	display block
	text-align center

	/* Header Top */
.header__top
	position relative
	z-index 30
	display inline-block
	width 100%
	background-color #fff

.header__top-bg
	bottom 0
	text-align center
	background-color #fff


.header__title
	position relative
	z-index 20
	margin auto
	padding 38px 10px
	font-family 'Open Sans', sans-serif
	font-size 33px
	color #636363

.header__logo-img
	position relative
	z-index 20
	/* Header Top */

	/* Header Bottom */
.header__bottom
	position relative
	z-index 20
	text-align center
	background-color #c0e4f7

.header__bottom-title
	position relative
	margin-top 100px
	margin-bottom 70px
	padding 25px 70px 18px
	display inline-block
	font-size 50px
	font-weight 700
	line-height 53px
	color #fff
	background-color #61a6d1
	border-radius 200px
	text-transform uppercase

.header__bottom-title-round-number
	position relative
	padding 30px 36px 30px 30px
	display inline-block
	font-size 60px

.header__bottom-title-round-number:after
	position absolute
	top 50%
	left 52%
	width 90px
	height 90px
	content ''
	transform translate(-50%, -50%)
	border 3px solid #fff
	border-radius 50%

/* Колонки */
.cols
	position relative
	// z-index 20
	margin auto
	display flex
	justify-content space-around
	max-width 1500px

.col-left.col__header,
.col-right.col__header
	justify-content flex-start
// .cols__header
// 	margin-bottom 60px

.col__dotted
	width 7px
	height 98%
	background-image url('../../images/single-dot.png')
	background-position center

.col-left,
.col-right
	display flex
	flex-basis 50%
	flex-direction column
	justify-content space-between

.col__header-text
	margin-top 40px
	font-size 34px
	font-weight 600
	line-height 56px
	color #0167ac
	text-transform uppercase
	strong
		font-weight 800

/* /Колонки */

	/* /Header Bottom */

/* Фон */
.header__top-bg-container
	position absolute
	left 0
	bottom -40px
	overflow hidden
	width 100%
	height 100px

.header__bg
	position absolute
	z-index 10
	bottom -90px
	overflow hidden
	width 100%
	height 200px
	background-color transparent

.header__bg-round
	z-index 10
	bottom 50px
	background-color #c0e4f7

.header__bg-round-lite
	z-index 5
	bottom 0
	background-color #d5edf9
/* /Фон */

/* Адаптация */
@media screen and (max-width 780px)
	.footer-inner__images-item
		width 50%
	.footer-inner__image-item-image
		align-items center
	.footer-inner__images-item-txt
		width 100%

@media screen and (max-width 780px)
	.col__header-img-picture
		width 80%

@media screen and (max-width 720px)
	.col__header-text
		font-size 25px
		line-height 35px
	.col-left, .col-right
		align-items center

@media screen and (max-width 600px)
	.footer__lojka
		width 33vw
	.footer__tarelka
		width 22vw
	.footer__glass
		width 13vw
	.footer__cup
		width 23vw
	.footer-inner__images
		padding 20px 14vw
	.footer-inner__images-item-txt
		font-size 4vw
	.footer-inner__images-item
		margin 12px 0
	.footer-inner__image-item-image
		margin-bottom 11vw

@media screen and (max-width 510px)
	.header__bottom-title
		font-size 40px
		line-height 50px
	.header__bottom-title-round-number
		padding 35px
	.col__header-text
		font-size 4vw
		line-height 5.5vw
/* /Адаптация */

/* /Header */
